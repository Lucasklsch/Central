  <div class="grid" id="gamesGrid">
    <!-- Os jogos serÃ£o adicionados aqui via JavaScript -->
  </div>

  <footer>
    &copy; 2025 - Todos os direitos reservados.
  </footer>

  <script>
    const totalJogos = 20; // Altere conforme a quantidade real de jogos
    const grid = document.getElementById("gamesGrid");

    for (let i = 1; i <= totalJogos; i++) {
      const pasta = String(i).padStart(3, '0');
      const card = document.createElement("div");
      card.className = "card";
      card.onclick = () => window.open(`./${pasta}/index.html`, '_blank');

      const titulo = document.createElement("h2");
      titulo.textContent = `Jogo ${pasta}`;

      card.appendChild(titulo);
      grid.appendChild(card);
    }
  </script>
